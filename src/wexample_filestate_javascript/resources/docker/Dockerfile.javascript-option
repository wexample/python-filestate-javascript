# Base image with Node.js
FROM node:20-alpine

# Install Biome globally
RUN npm install -g @biomejs/biome

# Copy Biome configuration and set ownership to UID/GID 1000
COPY biome.json /tmp/biome.json
RUN chown 1000:1000 /tmp/biome.json

# Switch to user with UID 1000
USER 1000:1000

# Set working directory
WORKDIR /var/www/html

# Keep container running
CMD ["tail", "-f", "/dev/null"]
